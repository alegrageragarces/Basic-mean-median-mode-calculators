#include <stdio.h>
#include <math.h>

int main()
{
    // Initialize coefficients and independent term
    float coefA = 0.0, coefB = 0.0, constantTerm = 0.0;
    
    do {
        // Ask for the coefficients of x² and x terms
        printf("\nEnter the coefficients for x^2 and x (separated by a space): ");
        scanf("%f %f", &coefA, &coefB);

        // A quadratic equation requires the x² coefficient to be non-zero
    } while (coefA == 0);
    
    printf("\nEnter the constant term: ");
    scanf("%f", &constantTerm);
    
    float discriminant = (coefB * coefB) - (4 * coefA * constantTerm);
    float root1, root2;

    printf("\nThe discriminant is %.2f\n", discriminant);

    // Case 1: discriminant > 0 → two real roots
    if (discriminant > 0.0) {
        root1 = (-coefB + sqrt(discriminant)) / (2 * coefA);
        root2 = (-coefB - sqrt(discriminant)) / (2 * coefA);
        printf("\nThe roots of the equation are %.2f and %.2f\n", root1, root2);

    // Case 2: discriminant = 0 → one double real root
    } else if (discriminant == 0) {
        root1 = (-coefB) / (2 * coefA);
        printf("\nThe equation has a double root: %.2f\n", root1);

    // Case 3: discriminant < 0 → complex roots
    } else {
        float realPart = (-coefB) / (2 * coefA);
        float imaginaryPart = sqrt(-discriminant) / (2 * coefA);

        printf("\nThe complex roots of the equation are:\n");
        printf("%.2f + %.2fi\n", realPart, imaginaryPart);
        printf("%.2f - %.2fi\n", realPart, imaginaryPart);
    }

    return 0;
}
